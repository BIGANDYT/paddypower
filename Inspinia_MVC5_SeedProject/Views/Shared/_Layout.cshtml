<!DOCTYPE html>
@using Sitecore.Mvc
@model Sitecore.Mvc.Presentation.RenderingModel
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PaddyPower</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
</head>
<body>

    <!-- Wrapper-->
    <div id="wrapper">

        <!-- Navigation -->
        @Html.Partial("_Navigation")

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg">

            <!-- Top Navbar -->
            @Html.Sitecore().Placeholder("topnavbar")

            <!-- Main view  -->
            @Html.Sitecore().Placeholder("content")

        </div>
        <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->
    @Scripts.Render("~/bundles/jquery")
    <script>
        var jQuery2 = jQuery.noConflict();
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/metsiMenu")
    @Scripts.Render("~/plugins/pace")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")
    @Scripts.Render("~/plugins/peity")
    @Scripts.Render("~/plugins/fittext")

    <script>
        var updatingChart = jQuery2(".line").peity("line", { width: 64, fill: ["green"] });
        jQuery2(".fittext").fitText();
    </script>
</body>
</html>
