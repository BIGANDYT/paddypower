@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model Inspinia_MVC5_SeedProject.Models.RowModel
@{
    string CssClass = String.Empty;
    string CssStyle = String.Empty;
    var rc = Sitecore.Mvc.Presentation.RenderingContext.CurrentOrNull;
    if (rc != null)
    {
        var parms = rc.Rendering.Parameters;
        CssClass = string.IsNullOrEmpty(parms["CssClass"]) ? String.Empty : parms["CssClass"];
        CssStyle = string.IsNullOrEmpty(parms["CssStyle"]) ? String.Empty : parms["CssStyle"];
    }
}
<div class="row @CssClass" style="background-image:url('@Model.BackgroundImgUrl');@CssStyle">
    <div class="col-md-3">
        @Html.Sitecore().DynamicPlaceholder("left")
    </div>
    <div class="col-md-3">
        @Html.Sitecore().DynamicPlaceholder("centerleft")
    </div>
    <div class="col-md-3">
        @Html.Sitecore().DynamicPlaceholder("centerright")
    </div>
    <div class="col-md-3">
        @Html.Sitecore().DynamicPlaceholder("right")
    </div>
</div>